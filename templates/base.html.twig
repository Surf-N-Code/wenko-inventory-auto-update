<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('main.css') }}">
        {% endblock %}

    </head>
    <body>
        {% block body %}{% endblock %}
            <a href="/wenko/read-itemfile" class="api-endpoint-link">Read Wenko Itemfile</a>
            <a href="/wenko/read-top-seller" class="api-endpoint-link">Read Wenko Top Seller file</a>
            <a href="/amazon/get-item-actions" class="api-endpoint-link">Get amazon item actions</a>
            <a href="/amazon/get-report-status" class="api-endpoint-link">Get amazon report status</a>
            <a href="/amazon/update-stock" class="api-endpoint-link">Update Stock</a>
            <a href="/amazon/get-listings-report" class="api-endpoint-link">Get amazon listings report</a>
            <a href="/amazon/get-listings/" id="get-listings-link" class="api-endpoint-link">Get amazon listings</a>
            <button id="generate-listings-link-generator" class="api-endpoint-link">Update get listings link with id from input</button>

        <input type="number" id="amazon-listing-report-id">

        {% block javascripts %}{% endblock %}
            <script type="text/javascript">
            document.getElementById("generate-listings-link-generator").onclick = function() {
                console.log("gerner");
                document.getElementById("get-listings-link").href= '/amazon/get-report-listings/'+document.getElementById('amazon-listing-report-id').value;
                return false;
            };
            // let getAmazonListingsLink = document.getElementById('get-listings-link');
            // getAmazonListingsLink.href = '/amazon/get-report-listings/'+document.getElementById('aamazon-listing-report-id').value;
            </script>
    </body>
</html>
